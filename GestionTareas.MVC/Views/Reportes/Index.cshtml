@model GestionTareas.MVC.Models.ReporteTareasViewModel

@{
    ViewData["Title"] = "Reportes de Tareas";
}

<h1>Reportes de Tareas</h1>

<form method="post" asp-action="ObtenerReporte">
    <div class="form-group">
        <label for="Estado">Estado</label>
        <select asp-for="Estado" class="form-control">
            <option value="Pendiente">Pendiente</option>
            <option value="En Progreso">En Progreso</option>
            <option value="Completada">Completada</option>
        </select>
    </div>

    <div class="form-group">
        <label for="Prioridad">Prioridad</label>
        <select asp-for="Prioridad" class="form-control">
            <option value="Alta">Alta</option>
            <option value="Media">Media</option>
            <option value="Baja">Baja</option>
        </select>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Obtener Reporte</button>
    </div>
</form>

<h2>Tareas Filtradas</h2>

<table class="table">
    <thead>
        <tr>
            <th>Título</th>
            <th>Descripción</th>
            <th>Fecha de Creación</th>
            <th>Fecha de Vencimiento</th>
            <th>Estado</th>
            <th>Prioridad</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tarea in Model.Tareas)
        {
            <tr>
                <td>@tarea.Titulo</td>
                <td>@tarea.Descripcion</td>
                <td>@tarea.FechaCreacion</td>
                <td>@tarea.FechaVencimiento</td>
                <td>@tarea.Estado</td>
                <td>@tarea.Prioridad</td>
            </tr>
        }
    </tbody>
</table>
