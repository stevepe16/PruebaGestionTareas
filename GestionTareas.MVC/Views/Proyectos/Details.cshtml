@model GestionTareas.MVC.Models.ProyectoDetallesViewModel 

@{
    ViewData["Title"] = "Details";
}

<h1>Detalles del Proyecto</h1>

<div>
    <h4>Proyecto</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Proyecto.Nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Proyecto.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Proyecto.FechaCreacion)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Proyecto.FechaCreacion)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Proyecto.FechaVencimiento)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Proyecto.FechaVencimiento)
        </dd>
    </dl>
</div>

<h2>Tareas Asociadas</h2>

<table class="table table-secondary">
    <thead>
        <tr>
            <th>Título</th>
            <th>Descripción</th>
            <th>Fecha de Creación</th>
            <th>Fecha de Vencimiento</th>
            <th>Estado</th>
            <th>Prioridad</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tarea in Model.Tareas)
        {
            <tr>
                <td>@tarea.Titulo</td>
                <td>@tarea.Descripcion</td>
                <td>@tarea.FechaCreacion</td>
                <td>@tarea.FechaVencimiento</td>
                <td>@tarea.Estado</td>
                <td>@tarea.Prioridad</td>
                <td>
                    <a asp-action="Details" class="btn btn-secondary" asp-controller="Tareas" asp-route-id="@tarea.Id">Ver detalles</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Proyecto?.Id">Editar Proyecto</a> |
    <a asp-action="Index">Volver a la lista</a>
</div>

